	"item": [
		{
			"name": "1. Authentication",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [],
						"body": { "mode": "raw", "raw": "{\n    \"username\": \"finaluser_full\",\n    \"password\": \"someSecurePassword123\",\n    \"first_name\": \"کاربر\",\n    \"last_name\": \"جامع\",\n    \"email\": \"full@example.com\",\n    \"lab_name\": \"آزمایشگاه جامع و کامل\",\n    \"lab_mobile_number\": \"09121112233\",\n    \"lab_address\": \"تهران، میدان آزادی، پلاک ۱\",\n    \"province\": \"تهران\",\n    \"city\": \"تهران\"\n}", "options": { "raw": { "language": "json" } } },
						"url": { "raw": "{{baseUrl}}/api/register/", "host": [ "{{baseUrl}}" ], "path": [ "api", "register", "" ] }
					}, "response": []
				},
				{
					"name": "Login",
					"event": [ { "listen": "test", "script": { "exec": [ "if (pm.response.code === 200) {", "    var jsonData = pm.response.json();", "    if (jsonData.token) {", "        pm.collectionVariables.set(\"authToken\", jsonData.token);", "        console.log(\"Auth Token saved.\");", "    }", "}" ], "type": "text/javascript" } } ],
					"request": {
						"method": "POST",
						"header": [],
						"body": { "mode": "raw", "raw": "{\n    \"username\": \"finaluser_full\",\n    \"password\": \"someSecurePassword123\"\n}", "options": { "raw": { "language": "json" } } },
						"url": { "raw": "{{baseUrl}}/api/login/", "host": [ "{{baseUrl}}" ], "path": [ "api", "login", "" ] }
					}, "response": []
				}
			]
		},
		{
			"name": "2. Main Data Endpoint",
			"item": [
				{
					"name": "Get Full User Data",
					"event": [ { "listen": "test", "script": { "exec": [ "if (pm.response.code === 200) {", "    var jsonData = pm.response.json();", "    if (jsonData.user && jsonData.user.lab_profile) {", "        pm.collectionVariables.set(\"profileId\", jsonData.user.lab_profile.id);", "        console.log(\"Profile ID saved: \" + jsonData.user.lab_profile.id);", "    }", "    if (jsonData.projects && jsonData.projects.length > 0) {", "        pm.collectionVariables.set(\"projectId\", jsonData.projects[0].id);", "        console.log(\"First Project ID saved from full-data: \" + jsonData.projects[0].id);", "    }", "}" ], "type": "text/javascript" } } ],
					"request": { "method": "GET", "header": [], "url": { "raw": "{{baseUrl}}/api/full-data/", "host": [ "{{baseUrl}}" ], "path": [ "api", "full-data", "" ] } },
					"response": []
				}
			]
		},
		{
			"name": "3. CRUD Operations",
			"item": [
				{
					"name": "Profile",
					"item": [
						{ "name": "Get My Profile", "request": { "method": "GET", "url": "{{baseUrl}}/api/profiles/{{profileId}}/" }, "response": [] },
						{ "name": "Update My Profile (PUT)", "request": { "method": "PUT", "body": { "mode": "raw", "raw": "{\n    \"first_name\": \"نام جدید\",\n    \"last_name\": \"فامیلی جدید\",\n    \"email\": \"new.email.final@example.com\",\n    \"lab_name\": \"آزمایشگاه آپدیت شده\",\n    \"lab_mobile_number\": \"09129998877\",\n    \"lab_address\": \"آدرس جدید\",\n    \"province\": \"استان جدید\",\n    \"city\": \"شهر جدید\"\n}", "options": { "raw": { "language": "json" } } }, "url": "{{baseUrl}}/api/profiles/{{profileId}}/" }, "response": [] }
					]
				},
				{
					"name": "Projects",
					"item": [
						{ "name": "List Projects", "request": { "method": "GET", "url": "{{baseUrl}}/api/projects/" }, "response": [] },
						{ "name": "Create Project", "event": [ { "listen": "test", "script": { "exec": [ "if (pm.response.code === 201) { var jsonData = pm.response.json(); pm.collectionVariables.set(\"projectId\", jsonData.id); console.log(\"Project ID saved: \" + jsonData.id); }" ], "type": "text/javascript" } } ], "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\n    \"file_number\": \"P-CRUD-101\",\n    \"project_name\": \"پروژه ساخته شده از CRUD\",\n    \"client_name\": \"کارفرما ۱\",\n    \"client_phone_number\": \"0211111\",\n    \"supervisor_name\": \"ناظر ۱\",\n    \"supervisor_phone_number\": \"0912111\",\n    \"requester_name\": \"درخواست دهنده ۱\",\n    \"requester_phone_number\": \"0910111\",\n    \"municipality_zone\": \"منطقه ۱\",\n    \"address\": \"آدرس پروژه ۱\",\n    \"project_usage_type\": \"تجاری\",\n    \"floor_count\": 8,\n    \"cement_type\": \"تیپ ۵\",\n    \"occupied_area\": 1200,\n    \"mold_type\": \"فلزی\",\n    \"contract_price\": 250000000.00\n}", "options": { "raw": { "language": "json" } } }, "url": "{{baseUrl}}/api/projects/" }, "response": [] },
						{ "name": "Get Single Project", "request": { "method": "GET", "url": "{{baseUrl}}/api/projects/{{projectId}}/" }, "response": [] },
						{ "name": "Update Project (PUT)", "request": { "method": "PUT", "body": { "mode": "raw", "raw": "{\n    \"file_number\": \"P-CRUD-101-UPDATED\",\n    \"project_name\": \"پروژه CRUD (آپدیت شده)\",\n    \"client_name\": \"کارفرما ۱ جدید\",\n    \"client_phone_number\": \"0211111\",\n    \"supervisor_name\": \"ناظر ۱ جدید\",\n    \"supervisor_phone_number\": \"0912111\",\n    \"requester_name\": \"درخواست دهنده ۱\",\n    \"requester_phone_number\": \"0910111\",\n    \"municipality_zone\": \"منطقه ۱\",\n    \"address\": \"آدرس پروژه ۱ جدید\",\n    \"project_usage_type\": \"تجاری\",\n    \"floor_count\": 10,\n    \"cement_type\": \"تیپ ۲\",\n    \"occupied_area\": 1250.5,\n    \"mold_type\": \"فلزی\",\n    \"contract_price\": 300000000.00\n}", "options": { "raw": { "language": "json" } } }, "url": "{{baseUrl}}/api/projects/{{projectId}}/" }, "response": [] },
						{ "name": "Delete Project", "request": { "method": "DELETE", "url": "{{baseUrl}}/api/projects/{{projectId}}/" }, "response": [] }
					]
				},
				{
					"name": "Transactions",
					"item": [
						{ "name": "List Transactions", "request": { "method": "GET", "url": "{{baseUrl}}/api/transactions/" }, "response": [] },
						{ "name": "Create Transaction", "event": [ { "listen": "test", "script": { "exec": [ "if (pm.response.code === 201) { var jsonData = pm.response.json(); pm.collectionVariables.set(\"transactionId\", jsonData.id); }" ], "type": "text/javascript" } } ], "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\n    \"project\": {{projectId}},\n    \"type\": \"income\",\n    \"description\": \"اولین واریزی از Postman\",\n    \"amount\": \"50000000.00\",\n    \"date\": \"2025-09-11T10:00:00Z\"\n}", "options": { "raw": { "language": "json" } } }, "url": "{{baseUrl}}/api/transactions/" }, "response": [] },
						{ "name": "Get Single Transaction", "request": { "method": "GET", "url": "{{baseUrl}}/api/transactions/{{transactionId}}/" }, "response": [] },
						{ "name": "Delete Transaction", "request": { "method": "DELETE", "url": "{{baseUrl}}/api/transactions/{{transactionId}}/" }, "response": [] }
					]
				},
				{
					"name": "Samples",
					"item": [
						{ "name": "List Samples", "request": { "method": "GET", "url": "{{baseUrl}}/api/samples/" }, "response": [] },
						{ "name": "Create Sample", "event": [ { "listen": "test", "script": { "exec": [ "if (pm.response.code === 201) { var jsonData = pm.response.json(); pm.collectionVariables.set(\"sampleId\", jsonData.id); }" ], "type": "text/javascript" } } ], "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\n    \"project\": {{projectId}},\n    \"date\": \"2025-09-10T10:00:00Z\",\n    \"test_type\": \"فشاری\",\n    \"sampling_volume\": \"4 m3\",\n    \"cement_grade\": \"C25\",\n    \"category\": \"دیوار برشی\",\n    \"weather_condition\": \"معتدل\",\n    \"concrete_factory\": \"بتن شرق\"\n}", "options": { "raw": { "language": "json" } } }, "url": "{{baseUrl}}/api/samples/" }, "response": [] },
						{ "name": "Get Single Sample", "request": { "method": "GET", "url": "{{baseUrl}}/api/samples/{{sampleId}}/" }, "response": [] },
						{ "name": "Update Sample", "request": { "method": "PUT", "body": { "mode": "raw", "raw": "{\n    \"project\": {{projectId}},\n    \"date\": \"2025-09-10T11:00:00Z\",\n    \"test_type\": \"فشاری (آپدیت شده)\",\n    \"sampling_volume\": \"4.5 m3\",\n    \"cement_grade\": \"C30\",\n    \"category\": \"دیوار برشی\",\n    \"weather_condition\": \"آفتابی\",\n    \"concrete_factory\": \"بتن شرق\"\n}", "options": { "raw": { "language": "json" } } }, "url": "{{baseUrl}}/api/samples/{{sampleId}}/" }, "response": [] },
						{ "name": "Delete Sample", "request": { "method": "DELETE", "url": "{{baseUrl}}/api/samples/{{sampleId}}/" }, "response": [] }
					]
				},
				{
					"name": "Sampling Series",
					"item": [
						{ "name": "Create Series", "event": [ { "listen": "test", "script": { "exec": [ "if (pm.response.code === 201) { var jsonData = pm.response.json(); pm.collectionVariables.set(\"seriesId\", jsonData.id); }" ], "type": "text/javascript" } } ], "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\n    \"sample\": {{sampleId}},\n    \"concrete_temperature\": 29.0,\n    \"ambient_temperature\": 31.0,\n    \"slump\": 7.5,\n    \"range\": \"7-9\",\n    \"air_percentage\": 2.0,\n    \"has_additive\": false\n}", "options": { "raw": { "language": "json" } } }, "url": "{{baseUrl}}/api/series/" }, "response": [] },
						{ "name": "List All Series", "request": { "method": "GET", "url": "{{baseUrl}}/api/series/" }, "response": [] }
					]
				},
				{
					"name": "Molds",
					"item": [
						{ "name": "Create Mold", "event": [ { "listen": "test", "script": { "exec": [ "if (pm.response.code === 201) { var jsonData = pm.response.json(); pm.collectionVariables.set(\"moldId\", jsonData.id); }" ], "type": "text/javascript" } } ], "request": { "method": "POST", "body": { "mode": "raw", "raw": "{\n    \"series\": {{seriesId}},\n    \"age_in_days\": 7,\n    \"mass\": 8.1,\n    \"breaking_load\": 0,\n    \"deadline\": \"2025-09-17T10:00:00Z\",\n    \"sample_identifier\": \"CRUD-7-1\",\n    \"extra_data\": {\"note\": \"created from postman\"}\n}", "options": { "raw": { "language": "json" } } }, "url": "{{baseUrl}}/api/molds/" }, "response": [] }
					]
				}
			]
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// This script automatically adds the authorization header to every request",
					"// in folders that need authentication.",
					"const token = pm.collectionVariables.get(\"authToken\");",
					"if (token) {",
					"    pm.request.headers.add({",
					"        key: 'Authorization',",
					"        value: 'Token ' + token",
					"    });",
					"}"
				]
			}
		}
